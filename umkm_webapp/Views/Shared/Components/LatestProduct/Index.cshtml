@{
    Layout = null;
}

@foreach (var product in Model)
{

    Product productInfo = (Product)product;
    Photo photo = productInfo.Photos.SingleOrDefault(ph => ph.Status && ph.Featured);
    var photoName = photo == null ? "no-image.jpg" : photo.Name;
<div class="col-lg">

    <div class="single-product">

        <!-- Sale badge-->
        <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">Sale</div>
        <!-- Product image-->
        <a asp-controller="product" asp-action="details" asp-route-id="@product.Id">
            <img class="card-img-top" src="~/product/@photoName" alt="..." />
        </a>

        <!-- Product details-->
        <div class="card-body p-4">
            <div class="text-center">
                <!-- Product name-->
                <h5 class="fw-bolder">@productInfo.Name</h5>
                <!-- Product reviews-->
                <div class="d-flex justify-content-center small text-warning mb-2">
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                </div>
                <!-- Product price-->
                Rp. @string.Format("{0:##,#}", @productInfo.Price)
            </div>
        </div>
        <!-- Product actions-->
        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
            <div class="text-center"><a class="btn btn-outline-dark mt-auto" asp-controller="cart" asp-action="buy">Add to cart</a></div>
        </div>
    </div>
</div>
}