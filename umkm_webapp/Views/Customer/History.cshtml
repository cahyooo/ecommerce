<div class="container">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Invoice Management</h6>
        </div>
        <div class="card-body">
            
            <div class="table-responsive">
                <table class="table table-bordered" id="dataCategory" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Name</th>
                            <th>Created</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>No</th>
                            <th>Name</th>
                            <th>Created</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @{int number = 1; }

                        @foreach (var invoice in ViewBag.invoices)
                        {
                            <tr>
                                <td>@number</td>
                                <td>@invoice.Name</td>
                                <td>@invoice.Created.ToString("MM/dd/yyyy")</td>
                                <td>@(invoice.Status == 1 ? "Pending" : "Done")</td>
                                <td><a asp-controller="customer" asp-action="details" asp-route-id="@invoice.Id"> Details </a></td>

                            </tr>
                            { number++; }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>