@{
    ViewData["Title"] = "Register and Login Page";
    Layout = "~/Views/Shared/_LayoutUser-View.cshtml";
}


@model umkm_webapp.Models.Account
@using umkm_webapp.Models;

<section class="pb-3 pt-3">
    <div class="container">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active">Customer</li>
            <li class="breadcrumb-item">Profile</li>
        </ol>
    </div>
</section>


<section class="products-grid pb-4 pt-4">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-4 col-12">
                <div class="sidebar">
                    <div class="sidebar-widget">
                        <div class="widget-title">
                            <h3>Profile</h3>
                        </div>

                        <div class="widget-content widget-categories">
                            <div id="wrapper">
                                <ul>
                                    <li><a asp-action="profile" asp-controller="customer">Profile</a></li>
                                    <li><a asp-action="index" asp-controller="cart">Cart</a></li>
                                    <li><a href="#">Chekout</a></li>
                                    <li><a href="#">Invoice Management</a></li>

                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-9 col-md-8 col-12">
                <div class="row">

                </div>

                <div class="row">


                    <div class="col-lg-12 col-md-12 col-12">
                        <div class="card mb-3" style="border-radius: .5rem;">
                            <div class="row g-0">
                                <div class="col-md-4 gradient-custom text-center text-white"
                                     style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
                                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava1-bg.webp"
                                         alt="Avatar" class="img-fluid my-5" style="width: 80px;" />
                                    <h5>@ViewBag.Profile.FullName</h5>

                                    <i class="far fa-edit mb-5"></i>
                                </div>
                                <div class="col-md-8">
                                    <div class="card-body p-4">
                                        <h6>Information</h6>
                                        <hr class="mt-0 mb-4">
                                        <div class="row pt-1">
                                            <div class="col-6 mb-3">
                                                <h6>Email</h6>
                                                <p class="text-muted">@ViewBag.Profile.Email</p>
                                            </div>
                                            <div class="col-6 mb-3">
                                                <h6>Username</h6>
                                                <p class="text-muted">@ViewBag.Profile.Username</p>
                                            </div>
                                        </div>
                                        <div class="d-flex justify-content-start">
                                            <a data-toggle="modal" data-target="#ChangePF" href="#" class="btn-circle"><i class="fa-solid fa-pen-to-square fa-lg"></i></a>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



