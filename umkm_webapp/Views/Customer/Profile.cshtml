@{
    ViewData["Title"] = "Register and Login Page";
    Layout = "~/Views/Shared/_LayoutUser-View.cshtml";
}


@model umkm_webapp.Models.Account
@using umkm_webapp.Models;

<section class="pb-3 pt-3">
    <div class="container">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active">Customer</li>
            <li class="breadcrumb-item">Profile</li>
        </ol>
    </div>
</section>


<section class="products-grid pb-4 pt-4">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-4 col-12">
                <div class="sidebar">
                    <div class="sidebar-widget">
                        <div class="widget-title">
                            <h3>Profile</h3>
                        </div>

                        <div class="widget-content widget-categories">
                            <div id="wrapper">
                                <ul>
                                    <li><a asp-action="profile" asp-controller="customer">Profile</a></li>
                                    <li><a asp-action="index" asp-controller="cart">Cart</a></li>
                                    <li><a href="#">Chekout</a></li>
                                    <li><a asp-action="history" asp-controller="customer">Invoice Management</a></li>

                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-9 col-md-8 col-12">
                <div class="row">

                </div>

                <div class="row">


                    <div class="col-lg-12 col-md-12 col-12">
                        <div class="card mb-3" style="border-radius: .5rem;">
                            <div class="row g-0">
                                <div class="col-md-4 gradient-custom text-center text-white"
                                     style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
                                    
                                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava1-bg.webp"
                                         alt="Avatar" class="img-fluid my-5" style="width: 80px;" />
                                    <h5>@ViewBag.Profile.FullName</h5>

                                    <i class="far fa-edit mb-5"></i>
                                </div>
                                <div class="col-md-8">
                                    <div class="card-body p-4">
                                        <h6>Information</h6>
                                        <hr class="mt-0 mb-4">
                                        <div class="row pt-1">
                                            <div class="col-6 mb-3">
                                                <h6>Email</h6>
                                                <p class="text-muted">@ViewBag.Profile.Email</p>
                                            </div>
                                            <div class="col-6 mb-3">
                                                <h6>Username</h6>
                                                <p class="text-muted">@ViewBag.Profile.Username</p>
                                            </div>
                                            <div class="col-6 mb-3">
                                                <h6>Address</h6>
                                                <p class="text-muted">@ViewBag.Profile.Address</p>
                                            </div>
                                            <div class="col-6 mb-3">
                                                <h6>Phone Number</h6>
                                                <p class="text-muted">@ViewBag.Profile.Phone</p>
                                            </div>
                                        </div>
                                        <div class="d-flex justify-content-start">
                                            <a data-toggle="modal" data-target="#ChangePF" href="#" class="btn-circle"><i class="fa-solid fa-pen-to-square fa-lg"></i></a>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="modal fade" id="ChangePF" tabindex="-1" role="dialog" aria-labelledby="ChangePF" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Update Profile</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-controller="customer" asp-action="profile" method="post">
                    <div class="mb-3">
                        <label class="small mb-1" for="inputUsername">Username</label>
                        <input class="form-control" id="inputUsername" type="text" placeholder="Enter your username" name="username" asp-for="Username" readonly="readonly" />
                    </div>
                    <div class="mb-3">
                        <label class="small mb-1" for="inputUsername1">FullName</label>
                        <input class="form-control" id="inputUsername1" type="text" placeholder="Enter your FullName" name="FullName" asp-for="FullName" />
                    </div>
                    <div class="mb-3">
                        <label class="small mb-1" for="inputUsername2">Address</label>
                        <input class="form-control" id="inputUsername2" type="text" placeholder="Enter your Address" name="address" asp-for="Address" />
                    </div>
                    <div class="mb-3">
                        <label class="small mb-1" for="inputUsername2">Phone</label>
                        <input class="form-control" id="inputUsername2" type="text" placeholder="Enter your Phone Number" name="phone" asp-for="Phone" />
                    </div>

                    <div class="row gx-3">
                        <div class="mb-3 col-md-6">
                            <label class="small mb-1" for="inputOrgName">Email</label>
                            <input class="form-control" id="inputOrgName" type="email" placeholder="Enter your Email" name="email" asp-for="Email" />
                        </div>
                        <div class="mb-3 col-md-6">
                            <label class="small mb-1" for="inputPassword">Password</label>
                            <input class="form-control" id="inputPassword" type="password" placeholder="Enter your Password" name="password" asp-for="Password"  readonly="readonly"/>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                        <button type="submit" class="btn btn-primary btn-user btn-block">Update</button>
                        <input type="hidden" asp-for="Id" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


