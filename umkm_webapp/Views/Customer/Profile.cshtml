<div class="modal fade" id="ChangePF" tabindex="-1" role="dialog" aria-labelledby="ChangePF" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Update Profile</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-controller="customer" asp-action="profile" method="post">
                    <div class="mb-3">
                        <label class="small mb-1" for="inputUsername">Username</label>
                        <input class="form-control" id="inputUsername" type="text" placeholder="Enter your username" name="username" asp-for="Username" readonly="readonly" />
                    </div>
                    <div class="mb-3">
                        <label class="small mb-1" for="inputUsername1">FullName</label>
                        <input class="form-control" id="inputUsername1" type="text" placeholder="Enter your FullName" name="FullName" asp-for="FullName" />
                    </div>

                    <div class="row gx-3">
                        <div class="mb-3 col-md-6">
                            <label class="small mb-1" for="inputOrgName">Email</label>
                            <input class="form-control" id="inputOrgName" type="email" placeholder="Enter your Email" name="email" asp-for="Email" />
                        </div>
                        <div class="mb-3 col-md-6">
                            <label class="small mb-1" for="inputPassword">Password</label>
                            <input class="form-control" id="inputPassword" type="password" placeholder="Enter your Password" name="password" asp-for="Password" />
                        </div>
                    </div>
                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                        <button type="submit" class="btn btn-primary btn-user btn-block">Update</button>
                        <input type="hidden" asp-for="Id" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


