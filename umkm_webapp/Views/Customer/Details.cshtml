<ul class="breadcrumb">
    <li><a asp-controller="home" asp-action="index"> Home </a></li>
    <li class="active"> Invoice Details </li>
</ul>

<div class="page-header">
    <h3>Invoice Details</h3>
</div>

<div class="row-fluid">
    <div class="span12">
        <table class="table">
            <thead>
                <tr>
                    <th>Product Id</th>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Sub Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var invoiceDetail in ViewBag.invoiceDetails) {
                <tr>
                    <td>@invoiceDetail.Product.Id</td>
                    <td>@invoiceDetail.Product.Name</td>
                    <td>@invoiceDetail.Price</td>
                    <td>@invoiceDetail.Quantity</td>
                    <td>@(invoiceDetail.Quantity * invoiceDetail.Price)</td>

                </tr>
                }
            </tbody>
        </table>
    </div>
</div>