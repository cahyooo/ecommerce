@model umkm_webapp.Models.Account

<div class="modal fade" id="profileModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Account Information</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-area="admin" asp-controller="login" asp-action="profile" method="post" class="user">
                    <div class="form-group">
                        <input required="required" type="text" class="form-control form-control-user"
                               id="exampleInputEmail" aria-describedby="emailHelp"
                               name="username" asp-for="Username">
                    </div>
                    <div class="form-group">
                        <input required="required" type="password" class="form-control form-control-user"
                               id="exampleInputPassword" name="password" asp-for="Password">
                    </div>
                    <div class="form-group">
                        <input required="required" type="text" class="form-control form-control-user"
                               id="exampleInputPassword" name="password" asp-for="FullName">
                    </div>
                    <div class="form-group">
                        <input required="required" type="text" class="form-control form-control-user"
                               id="exampleInputPassword" name="password" asp-for="Email">
                    </div>

                    <button type="submit" class="btn btn-primary btn-user btn-block" style="padding-left: 2.5rem; padding-right: 2.5rem;">
                        Login
                    </button>

                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                <a class="btn btn-primary">Logout</a>
            </div>
        </div>
    </div>
</div>