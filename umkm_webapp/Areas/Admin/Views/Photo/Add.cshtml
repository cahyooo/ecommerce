@{
    ViewData["Title"] = "Category";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model umkm_webapp.Models.Photo;

<section class="content-header">
    <h1>
        Add Photo to @ViewBag.Product
    </h1>
</section>

<div class="col-lg">
    <div class="card">
        <div class="card-body">
            <form asp-area="admin" asp-controller="photo" asp-action="add" method="post" enctype="multipart/form-data">
                @*Add Photo*@
                <div class="row mb-3">
                    <div class="col-sm-3">
                        <h6 class="mb-0">Photo</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        <input class="form-control" name="fileUpload" type="file" accept="image/*">
                    </div>
                </div>
                @*Add Status*@

                <div class="form-group">
                    <div class="custom-control custom-checkbox small">
                        <input type="checkbox" asp-for="Status" class="custom-control-input" id="customCheck">
                        <label class="custom-control-label" for="customCheck">
                            Status
                        </label>
                    </div>
                </div>
                @*Add Featured*@

                <div class="form-group">
                    <div class="custom-control custom-checkbox small">
                        <input type="checkbox" asp-for="Featured" class="custom-control-input" id="customCheck1">
                        <label class="custom-control-label" for="customCheck1">
                            Featured
                        </label>
                    </div>
                </div>




                <div class="row">
                    <div class="col-sm-3"></div>
                    <div class="col-sm-9 text-secondary">
                        <button type="submit" class="btn btn-primary btn-user btn-block" style="padding-left: 2.5rem; padding-right: 2.5rem;">
                            Change
                        </button>
                        <input type="hidden" asp-for="ProductId" />

                    </div>
                </div>

            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
            </div>
        </div>
    </div>
</div>