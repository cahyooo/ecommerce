
@{ ViewData["Title"] = "Edit Category";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml"; }

@model umkm_webapp.Models.Account

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Edit Customer</h1>
    <
</div>


<div class="col-lg">
    <div class="card">
        <div class="card-body">
            <form asp-area="admin" asp-controller="customer" asp-action="edit" method="post">
                <div class="row mb-3">
                    <div class="col-sm-3">
                        <h6 class="mb-0">Username</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        <input class="form-control" id="Username" asp-for="Username" type="text" required="required" readonly="readonly">
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-3">
                        <h6 class="mb-0">Password</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        <input class="form-control" id="Password" asp-for="Password" type="password" required="required">
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-3">
                        <h6 class="mb-0">FullName</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        <input class="form-control" id="FullName" asp-for="FullName" type="text" required="required">
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-3">
                        <h6 class="mb-0">Email</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        <input class="form-control" id="Email" asp-for="Email" type="text" required="required">
                    </div>
                </div>

                <div class="form-group">
                    <div class="custom-control custom-checkbox small">
                        <input type="checkbox" asp-for="Status" class="custom-control-input" id="customCheck">
                        <label class="custom-control-label" for="customCheck">
                            Status
                        </label>
                    </div>
                </div>


                <div class="row">
                    <div class="col-sm-3"></div>
                    <div class="col-sm-9 text-secondary">
                        <button type="submit" class="btn btn-primary btn-user btn-block" style="padding-left: 2.5rem; padding-right: 2.5rem;">
                            Change
                        </button>
                        <input type="hidden" asp-for="Id" />
                    </div>
                </div>

            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
            </div>
        </div>
    </div>
</div>